<Window x:Class="BozziPannelliApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BozziPannelliApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Inserisci giorno, mese, anno:"/>
        <TextBox x:Name="TxtGiorno" />
        <TextBox x:Name="TxtMese" />
        <TextBox x:Name="TxtAnno" />
        <Button x:Name="BtnLeggiDaFile" Content="Leggi da file" Click="BtnLeggiDaFile_Click" />
        <DataGrid x:Name="DgElenco" Height="300" />
        <Button x:Name="BtnCercaMassimo" Content="Cerca Massima Potenza" Click="BtnCercaMassimo_Click" />
    </StackPanel>
</Window>
